{% extends 'base.html.twig' %}

{% block title %}
    Modification de l'absence
{% endblock %}

{% block body %}
<div class="container-fluid col-10 col-lg-8 mr-auto ml-auto col-sm-6 p-0 bodyindex">
    <div class="row">
        <div class="col-md-12 col-lg-12 p-2 pt-3">
            <div class="card">
                <div class="d-flex">
                    <div class="card-body">
                        <h6 class="card-title">
                            Modifier l'absence
                        </h6>
                        {{ include('absences/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                        <div class="d-flex justify-content-end">
                            <div class='d-inline-flex'>
                                <a class='d-block btn rounded-pill btn-bleu mr-1' href="{{ path('absences_index') }}">Retour à la liste</a>
                                {{ include('absences/_delete_form.html.twig') }}
                                {% if (app.user.roles[0] == 'ROLE_ADMIN') or (app.user.roles[0] == 'ROLE_RH') or (app.user.roles[0] == 'ROLE_MANAGER')%}
                                <a class='btn bgc-pink rounded-pill mr-1' href="{{ path('absences_validation', {'id': absence.id}) }}">Valider</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}

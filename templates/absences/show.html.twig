{% extends 'base.html.twig' %}

{% block title %}Absences
{% endblock %}

{% block body %}
	<h1>Absences</h1>

	<table class="table table-bordered table-striped table-hover">
		<tbody>
			<tr>
				<th>Employé</th>
				<td>{{ absence.employe.nom|capitalize ~ ' ' ~ absence.employe.prenom|capitalize }}</td>
			</tr>
			<tr>
				<th>Date debut</th>
				<td>{{ absence.dateDebut ? absence.dateDebut|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Date retour</th>
				<td>{{ absence.dateRetour ? absence.dateRetour|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Statut</th>
				<td>{{ absence.statut }}</td>
			</tr>
		</tbody>
	</table>

	<div class="row justify-content-between">
		<div class"col-1">
			<a class='btn rounded-pill btn-pink' href="{{ path('absences_index') }}">Retour à la liste</a>
		
			<a class='btn rounded-pill btn-bleu' href="{{ path('absences_edit', {'id': absence.id}) }}">Modifier</a>
		</div>
	
	
		<div class="col-1">{{ include('absences/_delete_form.html.twig') }}</div>
	</div>
{% endblock %}

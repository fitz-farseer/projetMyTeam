{% extends 'base.html.twig' %}

{% block title %}Documents Envoyés
{% endblock %}

{% block body %}
	<div class="container-fluid col-10 col-lg-8 mr-auto ml-auto col-sm-6 p-0 bodyindex">
		<div class="row">
			<div class="col-md-12 col-lg-12 p-2 pt-3">
				<div class="card">
					<div class="d-flex">
						<div class="card-body">
							<h6 class="card-title">
								Documents Envoyés
							</h6>
							<table class="table table-bordered table-striped">
                                <thead class='thead-dark'>
									<tr>
										<th>Destinataire</th>
										<th>Date d'envoi</th>
										<th>Type</th>
										<th>Télécharger</th>
									</tr>
								</thead>
								<tbody>
									{% for document in documents %}
										<tr>
											<td>{{ document.destinataire.prenom|capitalize ~ " " ~ document.destinataire.nom|capitalize }}</td>
											<td>{{ document.dateEnvoi ? document.dateEnvoi|date('d-m-Y') : '' }}</td>
											<td>{{ document.type|capitalize }}</td>
											<td>
												<a href="{{ path('download', { name: document.name }) }}">
													<i class="fas fa-file-download"></i>
												</a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="5">Aucun document à afficher</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}

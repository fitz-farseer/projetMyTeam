{% extends 'base.html.twig' %}

{% block title %}Employe{% endblock %}

{% block body %}
    <h1>Fiche employé</h1>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employe.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employe.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ employe.roles ? employe.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ employe.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ employe.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ employe.prenom }}</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{{ employe.service }}</td>
            </tr>
            <tr>
                <th>Nb_conges</th>
                <td>{{ employe.nbConges }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ employe.sexe }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ employe.photo }}</td>
            </tr>
        </tbody>
    </table>

    <div><a href="{{ path('employe_index') }}" class="link">Retour à la liste</a></div>

    <div><a href="{{ path('employe_edit', {'id': employe.id}) }}" class="link">Modifier</a></div>

    {{ include('employe/_delete_form.html.twig') }}
{% endblock %}

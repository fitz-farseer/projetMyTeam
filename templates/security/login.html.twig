{% extends 'base.html.twig' %}

{% block title %}
	Connexion
{% endblock %}

{% block menu %}{% endblock %}


{% block body %}
	<div id="connexionBg">

		<div class="connexionContainer">
			{% if error %}
				<div class="mb-3">
					Vous êtes actuellement connecté
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Déconnexion</a>
				</div>
			{% endif %}
			{% if app.user %}
				<div class="d-flex justify-content-center h-100">
					<div class="card">
						<div class="card-header">
							<h3>Connexion</h3>
						</div>
						<div class="card-body">
							<form method='post'>
								<div class="input-group form-group">
									<div class="input-group-prepend">
										<span class="input-group-text">
											<i class="fas fa-user"></i>
										</span>
									</div>
									<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
								</div>
							{% endif %}

							<div class="d-flex justify-content-center h-100 connexion">
								<div class="centrerHauteur">
									<div class="profil">
										<div><img src="images/images_front/profil.png" alt="image profil" class="imgProfilConnexion"></div>
										<h3>Connexion</h3>
									</div>
									<div class="card-body">
										<div class="formHautConnexion">
											<form method='post'>
												<div class="input-group form-group">
													<div class="input-group-prepend">
														<span class="input-group-text">
															<i class="fas fa-user"></i>
														</span>
													</div>
													<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
												</div>
												<div class="input-group form-group">
													<div class="input-group-prepend">
														<span class="input-group-text">
															<i class="fas fa-key"></i>
														</span>
													</div>
													<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
													<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
												</div>
												<div class="row align-items-center remember">
													<input type="checkbox">
													Se souvenir de moi
												</div>
												<div class="form-group">
													<input type="submit" value="Se connecter" class="btn float-right couleurBoutonConnexion">
												</div>
											</form>
										</div>
									</div>
									<div class="card-footer noCompte">
										<div class="d-flex justify-content-center">
											<a href="#" class="link">Mot de passe oublié?</a>
										</div>
									</div>
								</div>
							</form>
						</div>

						</div>
					</div>
				</div>
			</div>
		</div>

